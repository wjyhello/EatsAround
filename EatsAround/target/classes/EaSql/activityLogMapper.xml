<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eatsaround.EaSql.activityLogMapper">

    <!-- 結果マップの定義。SQLクエリの結果をJavaオブジェクトにマッピング -->
    <resultMap id="ActivityLogResultMap" type="com.eatsaround.vo.ActivityLogVO">
        <result property="userId" column="USERID"/> <!-- USERIDカラムをuserIdプロパティにマッピング -->
        <result property="activityType" column="ACTIVITY_TYPE"/> <!-- ACTIVITY_TYPEカラムをactivityTypeプロパティにマッピング -->
        <result property="activityTime" column="ACTIVITY_TIME"/> <!-- ACTIVITY_TIMEカラムをactivityTimeプロパティにマッピング -->
    </resultMap>

    <!-- 統一された履歴を取得するためのSELECT文 -->
    <select id="getActivityHistory" resultMap="ActivityLogResultMap">
        SELECT USERID, ACTIVITY_TYPE, ACTIVITY_TIME
        FROM ACTIVITY_LOG
        ORDER BY ACTIVITY_TIME DESC
    </select>
    
    <!-- アクティビティを挿入するためのINSERT文 -->
    <insert id="activityLogVO" parameterType="com.eatsaround.vo.ActivityLogVO">
        INSERT INTO ACTIVITY_LOG (USERID, ACTIVITY_TYPE, ACTIVITY_TIME)
        VALUES (#{userId}, #{activityType}, #{activityTime}) <!-- ActivityLogVOからプロパティを取得 -->
    </insert>

</mapper>
