<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eatsaround.EaSql.adminMapper">

    <!-- 会員リストを取得 -->
<select id="getMemberList" resultType="com.eatsaround.vo.MemberVO">
    SELECT userId, userName, userEmail, userPhone, regDate
    FROM ea_member
    <if test="search != null and search != ''">
        WHERE userName LIKE CONCAT('%', #{search}, '%') OR userEmail LIKE CONCAT('%', #{search}, '%')
    </if>
    ORDER BY userName ASC
</select>


    <!-- 会員数を取得 -->
    <select id="getMemberCount" resultType="int">
        SELECT COUNT(*) FROM ea_member
    </select>

    <!-- 会員削除 -->
    <delete id="deleteMember">
        <![CDATA[
        DELETE FROM ea_member WHERE userId = #{userId}
        ]]>
    </delete>

    <!-- 掲示板数を取得 -->
    <select id="getBlogCount" resultType="int">
        SELECT COUNT(*) FROM TB_BLG_CONT
    </select>

    <!-- ログイン履歴を取得 -->
    <select id="getLoginHistory" resultType="com.eatsaround.vo.ActivityLogVO">
        SELECT userId AS userId, activity_type AS activityType, activity_time AS activityTime
        FROM ACTIVITY_LOG
        WHERE activity_type = 'login'
        ORDER BY activity_time DESC
    </select>
    
</mapper>
